<h1>List of Movies</h1>

<p>
<%= link_to "Create New Movie Review", new_movie_path %>
</p>

<table cellspacing="10"> 
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	<% @movies.each do |m| %>
	<tr>
		<td><%= m.title %></td>
		<td><%= m.description %></td>
		<td><%= m.rating %></td>
		<td><%= link_to 'Edit', edit_movie_path(m)%></td>
		<td>|</td>
		<td><%= link_to 'Show', movie_path(m) %></td>
		<td>|</td>
		<td><%= link_to 'Delete', movie_path(m), method: :delete, data: {confirm: "Are you sure?"} %>
		</td>
	</tr>
	<% end %>
</table>

<h1 align="center">List of Movies</h1>

<% @movies.each do |m| %>

<div class="row">

<div class="col-xs-8 col-xs-offset-2">

<div class="well well-lg">

<div class="movie-title">

<%= link_to m.title, movie_path(m) %>

</div>

<div class="movie-body">

<%= truncate(m.description, length: 100) %>

</div>

<div class="movie-actions">

<%= link_to "Edit this movie review", edit_movie_path(m), class: "btn btn-xs btn-primary" %>
<%= link_to "Show this movie review", movie_path(m), class: "btn btn-xs btn-success" %>
<%= link_to "Delete this movie review", movie_path(m), method: :delete,

data: { confirm: "Are you sure you want to delete the movie review?"},

class: "btn btn-xs btn-danger" %>

</div>

</div>

</div>

</div>

<% end %>