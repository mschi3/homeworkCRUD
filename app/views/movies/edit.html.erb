<h1>Edit existing article</h1>

<% if @movie.errors.any? %>
<h2>Please correct first the error below to proceed</h2>
	<ul>
		<% @movie.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @movie do |f| %>

<p>
	<%= f.label :title %><br/>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :description %><br/>
	<%= f.text_area :description %>
</p>

<p>
	<%= f.label :rating %><br/>
	<%= f.text_field :rating %>
</p>

<p>
	<%= f.submit "Edit Review" %>
</p>

<% end %>